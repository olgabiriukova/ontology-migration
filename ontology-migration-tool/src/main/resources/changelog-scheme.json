{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Changelog Schema",
  "type": "object",
  "required": ["changeSets"],
  "properties": {
    "changeSets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "changes"],
        "properties": {
          "id": { "type": "string" },
          "changes": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "object",
                  "required": ["type", "oldName", "newName"],
                  "properties": {
                    "type": { "const": "renameResource" },
                    "oldName": { "type": "string" },
                    "newName": { "type": "string" },
                    "graph": {"type":  "string"}
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "uri"],
                  "properties": {
                    "type": { "const": "addClass" },
                    "uri": { "type": "string" },
                    "label": { "type": "string" },
                    "graph": {"type":  "string"}
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "uri"],
                  "properties": {
                    "type": { "const": "addResource" },
                    "uri": { "type": "string" },
                    "classUri": { "type": "string" },
                    "label": { "type": "string" },
                    "graph": {"type":  "string"}
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "propertyURI"],
                  "properties": {
                    "type": { "const": "addProperty" },
                    "subjectURI": { "type": "string" },
                    "propertyURI": { "type": "string" },
                    "objectURI": { "type": "string" },
                    "graph": {"type":  "string"}
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "uri"],
                  "properties": {
                    "type": { "const": "deleteResource" },
                    "uri": { "type": "string" },
                    "graph": {"type":  "string"}
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "required": ["type", "query"],
                  "properties": {
                    "type": { "const": "sparqlUpdate" },
                    "query": { "type": "string" }
                  },
                  "additionalProperties": false
                }
              ]
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}